cp /etc/pacman.d/mirrorlist /etc/pacman.d/mirrorlist.backup grep -i "## China" -A 1 /etc/pacman.d/mirrorlist.backup | grep -v -e "--" > /etc/pacman.d/mirrorlist pacman -Sy && pacman -S --noconfirm pacman-contrib curl -s "https://www.archlinux.org/mirrorlist/?country=CN&protocol=http&protocol=https&ip_version=4&use_mirror_status=on" | sed -e 's/^#Server/Server/' -e '/^#/d' | rankmirrors -n 5 - > /etc/pacman.d/mirrorlist wget "archfi.sf.net/archfi" chmod +x archfi ./archfi
